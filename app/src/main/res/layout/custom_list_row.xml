<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/Flaga"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_9sdp"
        app:srcCompat="@drawable/pln"
        app:layout_constraintWidth_percent="0.13"
        android:layout_marginLeft="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/Symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        style="@style/ListSymbol"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Flaga"/>

    <TextView
        android:id="@+id/Nazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dolar amerykaÅ„ski"
        style="@style/ListName"
        android:layout_marginBottom="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="@+id/Symbol"
        app:layout_constraintBottom_toBottomOf="@+id/Flaga"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@drawable/line"
        android:layout_marginLeft="@dimen/_11sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>